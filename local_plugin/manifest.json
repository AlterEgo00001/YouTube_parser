{
  "manifest_version": 2,
  "name": "YouTube Parser",
  "version": "1.0",
  "description": "Extract images and text from YouTube videos or playlists and export to PDF or DOC.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
